{
  "family": "laravel-app",
  "requiresCompatibilities": ["FARGATE"],
  "networkMode": "awsvpc",
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::372836560826:role/laravel-fargate-ecs-exec-role",
  "taskRoleArn": "arn:aws:iam::372836560826:role/laravel-fargate-ecs-exec-role",
  "containerDefinitions": [{
    "name": "app",
    "image": "372836560826.dkr.ecr.ap-southeast-2.amazonaws.com/laravel-fargate-app:latest",
    "essential": true,
    "portMappings": [{ "containerPort": 80, "protocol": "tcp" }],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "/ecs/laravel-fargate",
        "awslogs-region": "ap-southeast-2",
        "awslogs-stream-prefix": "app"
      }
    }
  }]
}
